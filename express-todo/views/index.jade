extends layout


block content
  .container
  for task in tasks
    .top
      #title
        h1 Todo with Express + Jade
      h3 Enter Task
      form(action="/addTask", method="POST")
        input(type="text" id="enter-task-input" placeholder="New Task" name="taskName")
        input(type="submit" id="add-task")
    .middle#pending
      h3 Pending Tasks
      if task.isCompleted === false
      ul
        
          li
            .task
              form(class="left" action="/moveTaskCompleted", method="POST")
                button(type="submit" name="check" value="#{task}") Move
              .taskName
                p #{task.taskName}
                p Started: #{task.dateCreated}

              form(class="right" action="/removePendingTask", method="POST")
                button(type="submit" name="remove" value="#{task}") Remove

    .bottom#completed
      h3 Completed Tasks
      ul
          li
            .task
              form(class="left" action="/moveTaskPending", method="POST")
                button(type="submit" name="check" value="#{task}") Move
              .taskName
                p #{task.taskName}
                p Finished: #{task.dateCompleted}
              form(class="right" action="/removeCompletedTask", method="POST")
                button(type="submit" name="remove" value="#{task}") Remove

